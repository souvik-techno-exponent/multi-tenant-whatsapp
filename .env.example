# Webhook signature and verification
APP_SECRET=your_meta_app_secret_here
VERIFY_TOKEN=local_verify_token_for_meta

# Master key for token encryption (POC)
MASTER_KEY=32_byte_random_string_here

# MongoDB connection (docker service)
MONGO_URI=mongodb://mongo:27017/pocdb

# Redis for BullMQ (docker service)
REDIS_HOST=redis
REDIS_PORT=6379

# WhatsApp Graph API version
WHATSAPP_API_VERSION=v20.0

# App port
PORT=3000

# Helpful dev flag: if tenant token starts with "mock_" worker will simulate send
