# Dockerfile.dev
FROM node:20

WORKDIR /usr/src/app

# copy package manifests first for caching
COPY package.json package-lock.json* ./

# install dependencies (use npm i as requested)
# note: using --silent to reduce noisy logs in docker build output
RUN npm i --silent

# copy rest of the sources (mounted in docker-compose for live reload)
COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
