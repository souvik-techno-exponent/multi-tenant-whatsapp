# App secret for webhook signature verification (Meta App secret)
APP_SECRET=your_meta_app_secret_here
VERIFY_TOKEN=local_verify_token_for_meta

# Master key to encrypt per-tenant tokens at rest (POC only)
MASTER_KEY=32_byte_random_string_here

# MongoDB
MONGO_URI=mongodb://mongo:27017/pocdb

# Redis for BullMQ
REDIS_HOST=redis
REDIS_PORT=6379

# WhatsApp Graph API version
WHATSAPP_API_VERSION=v20.0

# App port
PORT=3000
