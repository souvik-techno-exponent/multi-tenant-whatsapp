FROM node:20

WORKDIR /usr/src/app

# Copy manifests first for layer caching
COPY package.json package-lock.json* ./

RUN npm ci --silent

# Copy the rest (but in compose we mount the source so this is mostly for first boot)
COPY . .

EXPOSE 3000

# ts-node-dev will handle watching & hot-reload inside container
CMD ["npm", "run", "dev"]
