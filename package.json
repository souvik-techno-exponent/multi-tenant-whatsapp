{
    "name": "poc-whatsapp-multitenant-mongo-ts",
    "version": "1.0.0",
    "private": true,
    "description": "Multi-tenant WhatsApp Cloud API PoC (TypeScript, dev-friendly Docker hot reload)",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --poll --watch src src/index.ts",
        "start": "node dist/index.js",
        "worker:dev": "ts-node-dev --respawn --transpile-only --poll --watch src src/workerProcess.ts",
        "build": "tsc -p tsconfig.json",
        "lint": "echo \"(add linter if you want)\""
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bullmq": "^5.61.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "ioredis": "^5.4.1",
        "mongoose": "^8.6.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.11",
        "@types/uuid": "^9.0.7",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.4"
    }
}
