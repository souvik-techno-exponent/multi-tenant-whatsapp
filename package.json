{
    "name": "poc-whatsapp-multitenant-mongo-ts",
    "version": "1.0.0",
    "private": true,
    "description": "Multi-tenant WhatsApp Cloud API PoC (TypeScript, dev-friendly Docker hot reload)",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --poll --watch src src/index.ts",
        "start": "node dist/index.js",
        "worker:dev": "ts-node-dev --respawn --transpile-only --poll --watch src src/workerProcess.ts",
        "build": "tsc -p tsconfig.json",
        "lint:backend": "eslint . --ext .ts --max-warnings=0",
        "lint:frontend": "cd frontend && eslint . --ext .ts,.tsx --max-warnings=0",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "lint:fix:backend": "eslint . --ext .ts --fix",
        "lint:fix:frontend": "cd frontend && npm run lint:fix",
        "typecheck:backend": "tsc -p tsconfig.json --noEmit",
        "typecheck:frontend": "cd frontend && tsc -p tsconfig.json --noEmit",
        "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
        "lint:fix:all": "npm run typecheck && npm run lint:fix:backend && npm run lint:fix:frontend"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bullmq": "^5.61.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "ioredis": "^5.4.1",
        "mongoose": "^8.6.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.11",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "eslint": "^9.38.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.4"
    }
}
