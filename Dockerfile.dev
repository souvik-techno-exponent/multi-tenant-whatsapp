# development Dockerfile
FROM node:20

# Create app directory
WORKDIR /usr/src/app

# Copy dependency manifests first for efficient rebuilds
COPY package.json package-lock.json* ./ 

# Install deps
RUN npm ci --silent

# Copy the rest (mounted in compose for live reload)
COPY . .

# Expose app port
EXPOSE 3000

# Default command is dev start (override in compose for worker)
CMD ["npm", "run", "dev"]
